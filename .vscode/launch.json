    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Stonks",
            "type": "node",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**",
            ],
            "env": {
                "ENV": "development",
            },
            "runtimeArgs": [
                "--inspect",
            ],
            "program": "${workspaceFolder}/dist/app.bundle.js",
            "sourceMaps": true,
            "preLaunchTask": "npm: build-dev",
        }
    ]
}